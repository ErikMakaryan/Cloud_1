{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid"
      }
    },
    "opportunities": {
      ".read": "auth != null",
      ".write": "auth != null && root.child('users').child(auth.uid).child('userType').val() == 'organization'",
      "$oppId": {
        ".read": "auth != null",
        ".write": "auth != null && root.child('users').child(auth.uid).child('userType').val() == 'organization'"
      }
    },
    "applications": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$appId": {
        ".read": "auth != null && (data.child('userId').val() == auth.uid || root.child('opportunities').child(data.child('oppId').val()).child('createdBy').val() == auth.uid)",
        ".write": "auth != null && (data.child('userId').val() == auth.uid || root.child('opportunities').child(data.child('oppId').val()).child('createdBy').val() == auth.uid)"
      }
    }
  }
} 