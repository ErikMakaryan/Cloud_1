<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Base.Theme.VOHoportunitysconect" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/primary_darker</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:icon">@drawable/ic_heart_white</item>
        <item name="android:roundIcon">@drawable/ic_heart_white</item>
        <!-- Shape appearance -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.App.LargeComponent</item>
    </style>

    <!-- Main application theme -->
    <style name="Theme.VOHoportunitysconect" parent="Base.Theme.VOHoportunitysconect">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="actionBarStyle">@style/AppActionBar</item>
    </style>

    <!-- Action Bar style -->
    <style name="AppActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:icon">@drawable/ic_heart_white</item>
    </style>

    <!-- No Action Bar theme -->
    <style name="Theme.VOHoportunitysconect.NoActionBar" parent="Base.Theme.VOHoportunitysconect">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Shape Appearances -->
    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Circle ImageView style -->
    <style name="CircleImageView">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Material Design Chip Styles -->
    <style name="Widget.MaterialComponents.Chip.Info" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/primary_light</item>
        <item name="android:textColor">@color/primary_dark</item>
    </style>

    <style name="Widget.MaterialComponents.Chip.Suggestion" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/accent</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>